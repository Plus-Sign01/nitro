<div class="page-header">
  <h1>プロジェクト作成</h1>
</div>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@project) do |f| %>

    <%= f.label :project_name　%>
    <%= f.text_field :project_name %>

    <%= f.label :project_place %>
    <%= f.text_field :project_place %>

    <%= f.label :content %>
    <%= f.text_field :content %>

    <%= f.label :project_start_time %>
    <div>
      <%= f.datetime_select :start_time, start_year: now.year, end_year: now.year + 1 %>
    </div>
    <%= f.label :project_end_time %>
    <div>
      <%= f.datetime_select :end_time, start_year: now.year, end_year: now.year + 1 %>
    </div>

    <%= f.label :content %>
    <%= f.text_area :content %>
    <%= f.label :project_owner %>
    <%= f.text_field :project_owner %>

    <%= f.submit "make project", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
